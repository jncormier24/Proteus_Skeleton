function show()
{	
	global $config;
	
	$a = new indexPage("Sample Index Page");
	$a->secure();
	
	$hdr = new phpHeader(2, "Logged in as: ".$a->authUser->fullName);
	$hdr->style = "font-size: 20px;";	
	
	$a->addControl($hdr);
	
	$a->render();
}
