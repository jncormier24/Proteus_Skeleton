function togglePostStatus($postEntryID)
{
	global $config, $g_sec;

	$js = new json_a();
	
	try
	{	
		$pObj = new pmm_entityPosting($postEntryID);
		if (!$pObj->id) throw new Exception("Error, that post could not be found!");		
		
