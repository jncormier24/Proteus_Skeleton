function getAgendas($entityID, $paging, $sortData, $filterColumns, $customColumns)
{
	global $g_sec;
	
	$d = new DAL(true);
	$js = new json_a();
	
	try
	{		
		$eObj = new pmm_entity($entityID);
		if (!$eObj->id) throw new Exception("Error, that Entity could not be found!");
		
		if (!$g_sec->hasAccess(permissions::$manage_municipal_entities, permissions::read) &&
			!$g_sec->hasAccess(permissions::$municipal_entity, permissions::read, $entityID)) $g_sec->security_error_a();
			
		$t = new tblBuilder("center", 0, 0, 5, '100%');
		$t->class = "listTable hoverTable";
		$t->id = "agendasTable";
		
		$r = $t->addRow();
		$r->addHeader(new tblHeader("Title", "title"));
		$r->addHeader(new tblHeader("Date &amp; Time", "meeting"));
		$r->addHeader(new tblHeader("&nbsp;", "", "", "", "1%"));		
		
		$r = $t->addRow();
		$r->addHeader(new tblHeader());
		$r->addHeader(new tblHeader());
		$r->addHeader(new tblHeader());
		
		$conf = new siteConfig();		
		
		foreach((array)$customColumns as $cFilter)
		{
			if (!strlen($cFilter["value"])) continue;
		
			switch($cFilter["key"])
			{
				case "status":
					switch($cFilter["value"])
					{
						case 1:
							$wh[] = "(meetingDateTime is null or meetingDateTime > now())";
							break;
							
						case 2:
							$wh[] = "meetingDateTime < now()";
							break;
					}								
					break;
			}
		}
		
		tableFilter::getWhereArray($filterColumns, $wh, $hvArr);
		$whClause = tableFilter::getWhereClause($wh);
		
		$qry = "select id
				from pmm_entityAgendas
				where pmm_entityAgendas.entityID = {$eObj->id} $whClause				
				order by ".tableFilter::getOrderClause($sortData, "meetingDateTime asc");
		
		$totalCt = $d->qryRow($qry);
		$aQry = $d->qry($qry.tableFilter::getLimitClause($paging));
		
		while($agenda = $aQry->fetch_assoc())			
		{		
			$agendaObj = new pmm_entityAgenda($agenda["id"]);
			
			$mnu = new jqPopupMenu();
			
			$ctl = $mnu->addMenuItem("", "Manage Meeting Minutes", "", "ui-icon-comment");
			$ctl->onclick = "getFilesWin(2, $agendaObj->id, '#agendaWin')";
			
			if ($conf->moduleEnabled(proteus_core::module_subscribers))
			{
				$optData = subscriberOption::getSubscriberOption(proteus_core::module_municipal, $entityID);
					
				if ($optData[id])
				{
					$ctl = $mnu->addMenuItem("", "Email Subscribers", "", "ui-icon-mail-closed");
					$ctl->onclick = "getSubscriptionSendWin($optData[id], 0, ".subscriber_core::type_municipal_agenda.", $agendaObj->id)";
				}
			}
			
			$ctl = $mnu->addMenuItem("", "Edit Meeting Agenda", "", "ui-icon-pencil");
			$ctl->onclick = "getAgendaEdit($agendaObj->id, 0)";			
			
			if ($g_sec->hasAccess(permissions::$manage_municipal_entities, permissions::write) ||
				$g_sec->hasAccess(permissions::$municipal_entity, permissions::delete, $entityID))
			{
				
				$ctl = $mnu->addMenuItem("", "Delete Agenda", "ui-state-error", "ui-icon-trash");
				$ctl->onclick = "deleteAgenda($agendaObj->id)";
			}
			
			$r = $t->addRow();
			$r->addAttribute("data-id", $agendaObj->id);
			$r->addCell(new tblCell(validation::prepForDisplay($agendaObj->title, false), "evenCell", "left"));
			$r->addCell(new tblCell(validation::parseMySqlDate($agendaObj->meetingDateTime, "D, M d \a\\t h:ia"), "oddCell", "left", "", 175));
			$r->addCell(new tblCell($mnu, "evenCell", "center", "", 340));		
		}
		
		if (!$totalCt)
		{
			$r = $t->addRow();
			$r->addCell(new tblCell("There are no Agenda entries defined for this entity.", "evenCell", "center", 3));
		}
		
		$js->count = $totalCt;
		$js->content = $t->render();
	}
	catch(Exception $ex)
	{
		$eWin = new jqUI_errorNotify($ex);
		$js->error = $eWin->render();	
	}
	
	echo $js->render();
	exit(0);	
}
function getAgendaEdit($agendaID, $entityID)
{
	global $g_sec;
	
	$js = new json_a();
	
	try
	{	
		validation::ensureInt($entityID);
		validation::ensureInt($agendaID);
		
		if (!$agendaID) $agendaID = 0;
		
		$agendaObj = new pmm_entityAgenda($agendaID);
		
		if ($agendaID)
		{
			if (!$agendaObj->id) throw new Exception("Error, that Agenda could not be found!");
			$entityID = $agendaObj->entityID;
			
			$writeAccess = $g_sec->hasAccess(permissions::$manage_municipal_entities, permissions::write) ||
						   $g_sec->hasAccess(permissions::$municipal_entity, permissions::write, $entityID);
		}
		else
		{
			//This shouldn't happen
			if (!$entityID) throw new Exception("Error, no entity provided for new Agenda Entry. Please try again.");
			
			$eObj = new pmm_entity($entityID);
			if (!$eObj->id) throw new Exception("Error, that entity could not be found! Please refresh the page and try again.");
			
			$writeAccess = $g_sec->hasAccess(permissions::$manage_municipal_entities, permissions::write) ||
						   $g_sec->hasAccess(permissions::$municipal_entity, permissions::insert, $entityID);
		}		
		
		if (!$g_sec->hasAccess(permissions::$manage_municipal_entities, permissions::read) && 
		    !$g_sec->hasAccess(permissions::$municipal_entity, permissions::read, $entityID)) $g_sec->security_error_a();		
			
		$agendaEditWin = new jqUI_dialog("agendaEditWin", true, 800, "", $agendaID ? "Modify Agenda Entry" : "Add a new Agenda Entry");
		$agendaEditWin->addClass("configWin");
		$agendaEditWin->setOption("autoOpen", true);
		$agendaEditWin->setOption("modal", 0);
		$agendaEditWin->fitToViewport();
		
		$agendaEditWin->addCloseButton($agendaObj->id ? "Close" : "Cancel");
		
		if ($writeAccess)
		{
			$agendaEditWin->addButton($agendaID ? "Save Changes" : "Add agenda", "function() { saveAgenda(); }");
			if (!$agendaID) $agendaEditWin->addButton("Add & Insert Notice", "function() { saveAgenda(1); }");
		}	
		else
		{
			$js->disabled = 1;
		}	
		
		if ($agendaObj->updatedUserID)
		{
			$sec = new security($agendaObj->updatedUserID);
			$agendaEditWin->addControl(new phpParagraph("Last edited by $sec->login on ".validation::parseMySqlDate($agendaObj->updatedDateTime, "D, M d Y \a\\t h:ia"), "", "left"));	
		}
		
		$txtTitle = new customText("agenda[title]", validation::prepTextForInput($agendaObj->title), 50, 50);
		$txtTitle->setLabel("Title:");
		
		$txtLoc = new phpTextArea("agenda[location]", validation::prepTextForInput($agendaObj->location), 2, 60);
		$txtLoc->setLabel("Meeting Location:");
		
		$txtBody = new phpTextArea("agenda[body]", validation::prepTextForInput($agendaObj->body), 16, 102, "wysiwyg");
		$txtBody->setLabel("Meeting Agenda Detail:", "", true);		
		
		$dtSplit = explode(" ", $agendaObj->meetingDateTime);
		
		$ddlTime = new phpDDL("agenda[time]");
		$ddlTime->setLabel("Meeting Time:");			
		$ddlTime->selected = $dtSplit[1] ? substr($dtSplit[1], 0, -3) : $agendaObj->settings->defaultMeetingTime;
		
		for($i = 0; $i <= 23; $i++)
		{
			for($j = 0; $j <= 45; $j+=15)
			{	
				$hrVal = ($i > 12 || !$i ? abs($i - 12) : $i);			
				
				$periodDisp = " ".($i >= 12 ? "PM" : "AM");
				
				$jDisp = sprintf("%02d", $hrVal).":".sprintf("%02d", $j);
				$jVal = sprintf("%02d", $i).":".sprintf("%02d", $j);
				
				$ddlTime->addListItem(new phpListItem($jDisp.$periodDisp, $jVal));
			}
		}

		$dtDate = new jqUI_datepicker("agenda[date]", validation::parseMySqlDate($agendaObj->meetingDateTime, "m-d-Y"), "Meeting Date:", true, "new Date(2005,1,1)");
		
		$frm = new phpForm("post", "agendaEditForm");
		$frm->addControl($txtTitle);
		$frm->addControl($dtDate);
		$frm->addControl($ddlTime);
		$frm->addControl($txtLoc);
		$frm->addControl($txtBody);
		$frm->addControl(new hiddenInput("action", "saveAgenda"));
		$frm->addControl(new hiddenInput("agendaID", $agendaObj->id));
		$frm->addControl(new hiddenInput("entityID", $entityID));
		$frm->addControl(new hiddenInput("addNotice", 0));		
		
		$agendaEditWin->addControl($frm);
			
		if (!$agendaObj->id)
		{
			$msg = "<strong>NOTE:</strong> Some editor features (file uploads, image uploads, etc) are unavailable until the content 
					entry has been added.<br /><br />
					Please fill out the basic information, then click the add button to enable all editor features.";
			
			$agendaEditWin->insertControl(new jqUI_dismissableMessage($g_sec, "new_municipal_agenda", $msg));	
		}
		
		$js->entityID = $agendaObj->entityID;
		$js->addObject("content", $agendaEditWin->render(), false);		
	}
	catch(Exception $ex)
	{
		$eWin = new jqUI_errorNotify($ex);
		$js->error = $eWin->render();	
	}
	
	echo $js->render();
	exit(0);
}
function saveAgenda($agendaID, $agenda, $entityID, $addNotice)
{
	global $g_sec;
	global $config;
	
	$js = new json_a();
	
	try
	{	
		validation::ensureInt($entityID);
		validation::ensureInt($agendaID);		
		validation::ensureInt($addNotice, 0);
		
		$agendaObj = new pmm_entityAgenda($agendaID);
		
		if ($agendaID)
		{
			if (!$agendaObj->id) throw new Exception("Error, that agenda entry could not be found!");
			$entityID = $agendaObj->entityID;
		}
		else
		{
			//This shouldn't happen
			if (!$entityID) throw new Exception("Error, no entity provided for new Agenda Entry. Please try again.");
			
			$eObj = new pmm_entity($entityID);
			if (!$eObj->id) throw new Exception("Error, that entity could not be found! Please refresh the page and try again.");
		}
				
		if (strlen($agenda[title]) < 3) throw new Exception("Error, Agenda title must be at least 3 characters.");
		if (!strlen($agenda[body])) throw new Exception("Error, you must specify Agenda content!");
				
		$agenda["body"] = validation::prepMultiLineForStorage($agenda["body"]);
		$agenda["location"] = validation::prepMultiLineForStorage($agenda["location"]);
		
		if ($agenda["date"])
		{
			$agenda["meetingDateTime"] = validation::convertToMySqlDate($agenda["date"])." {$agenda["time"]}:00";		
			$noticeDate = $agenda["date"];
		}
				
		unset($agenda["date"]);
		unset($agenda["time"]);
		
		$agendaObj->updatedUserID = $g_sec->id;
		$agendaObj->updatedDateTime = "now()";

		foreach((array)$agenda as $key=>$value)
		{
			$agendaObj->$key = "'$value'";	
		}
		
		if ($agendaID)
		{
			if (!$g_sec->hasAccess(permissions::$manage_municipal_entities, permissions::write) &&
				!$g_sec->hasAccess(permissions::$municipal_entity, permissions::write, $entityID)) $g_sec->security_error_a();
				
			$agendaObj->save();
			pageClass::setNotify("Agenda successfully saved.");
		}
		else
		{
			if (!$g_sec->hasAccess(permissions::$manage_municipal_entities, permissions::write) &&
				!$g_sec->hasAccess(permissions::$municipal_entity, permissions::insert, $entityID)) $g_sec->security_error_a();			
			
			if ($addNotice) //do we want to post this as a notice at the same time?  Many meetings also require public notice
			{				
				if (!$noticeDate) throw new Exception("Cannot save and insert without specifying a valid date. Please select a date, or choose the option to Add Agenda only.");

				// Add this as a notice as well; create an entity object manually for full control (previously latched to savePostEntry)
				$postObj = new pmm_entityPosting(0);
				$postObj->body = "'<p><em>Meeting Held On: $noticeDate </em></p>" . $agenda[body] ."<br>
							   <a href = \"municipal/minutes/{$agendaObj->id}\">View this Agenda & Associated Minutes here</a>'";
				
				// Not HTML in Blurb (flat text)
				$blurb = validation::cleanHTML($post["body"]);				
				
				$postObj->blurb = "'".validation::truncateText("Meeting Held On: $noticeDate \n".$blurb, 250)."'";				
				
				$tsMeeting = validation::convertToUnixTimestamp($agenda["meetingDateTime"]);
				$tsExpire = strtotime("+24 hours", $tsMeeting);
				
				$postObj->title = "'".$agenda["title"]."'";
				$postObj->expireDate = "'".date("Y-m-d", $tsExpire)."'";
				
				// Set to 2 for notices
				$postObj->typeID = 2;
				$psotObj->entityID = $entityID;
				$postObj->updatedDateTime = "now()";
				$postObj->updatedUserID = $g_sec->id;
				
				$postObj->insert();
				
				$noticeNotify = " and Public Notice.";
			}
			
			$agendaObj->entityID = $entityID;
			$agendaObj->insert();
			
			pageClass::setNotify("Successfully added Agenda Entry" . $noticeNotify );
		}		
		
		$js->entityID = $entityID;
	}
	catch(Exception $ex)
	{
		$eWin = new jqUI_errorNotify($ex);
		$js->error = $eWin->render();	
	}
	
	echo $js->render();
	exit(0);		
}
